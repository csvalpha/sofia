<div class="col-12 col-md-6 col-lg-4 mt-3 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        Log in to continue
      </h3>
    </div>
    <div class="card-body">
      <p class="card-text">
        Log in with a <%= Rails.application.config.x.site_association %> account.
      </p>
      <div class="d-grid">
        <%= button_to "Sign in with #{Rails.application.config.x.site_association}", user_amber_oauth2_omniauth_authorize_path, class: 'btn btn-primary', data: { turbo: "false" } %>
      </div>
    </div>
  </div>
</div>
