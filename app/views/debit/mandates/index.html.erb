<% content_for :title, "SEPA Mandaten - #{Rails.application.config.x.site_name}" %>

<div class="container footer-padding">
  <div class="row py-4">
    <div class="col-sm-12">
      <h1>
        <i class="fas fa-file-invoice-dollar me-2"></i>
        SEPA Mandaten
      </h1>
      <div class="d-flex justify-content-between mb-3 align-items-center flex-wrap">
        <span class="my-1">
          Beheer SEPA incasso mandaten voor automatische afschrijvingen.
        </span>
        <%= link_to new_debit_mandate_path, class: 'btn btn-sm btn-primary' do %>
          <i class="fas fa-plus me-1"></i>
          Nieuw mandaat
        <% end %>
      </div>
    </div>
    
    <div class="col-sm-12">
      <% if @mandates.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Gebruiker</th>
                <th scope="col">IBAN</th>
                <th scope="col">Rekeninghouder</th>
                <th scope="col">Mandaatreferentie</th>
                <th scope="col">Startdatum</th>
                <th scope="col">Einddatum</th>
                <th scope="col">Status</th>
                <th scope="col">Acties</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% @mandates.each do |mandate| %>
                <tr class="<%= 'table-secondary' unless mandate.active? %>">
                  <td>
                    <%= link_to mandate.user.name, mandate.user %>
                  </td>
                  <td class="text-nowrap">
                    <%= mandate.formatted_iban %>
                  </td>
                  <td>
                    <%= mandate.iban_holder %>
                  </td>
                  <td class="text-nowrap">
                    <%= mandate.mandate_reference %>
                  </td>
                  <td class="text-nowrap">
                    <%= l(mandate.start_date) %>
                  </td>
                  <td class="text-nowrap">
                    <%= mandate.end_date ? l(mandate.end_date) : '-' %>
                  </td>
                  <td>
                    <% if mandate.active? %>
                      <span class="badge bg-success">Actief</span>
                    <% else %>
                      <span class="badge bg-secondary">Inactief</span>
                    <% end %>
                  </td>
                  <td class="text-nowrap">
                    <%= link_to debit_mandate_path(mandate), class: 'btn btn-sm btn-outline-primary' do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_debit_mandate_path(mandate), class: 'btn btn-sm btn-outline-secondary' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <% if current_user&.treasurer? %>
                      <%= link_to debit_mandate_path(mandate), 
                                  method: :delete,
                                  data: { turbo_method: :delete, turbo_confirm: 'Weet je zeker dat je dit mandaat wilt verwijderen?' },
                                  class: 'btn btn-sm btn-outline-danger' do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate @mandates %>
      <% else %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          Er zijn nog geen mandaten aangemaakt. Klik op "Nieuw mandaat" om er een toe te voegen.
        </div>
      <% end %>
    </div>
  </div>
</div>
