<% content_for :title, "SEPA Incasso's - #{Rails.application.config.x.site_name}" %>

<div class="container footer-padding">
  <div class="row py-4">
    <div class="col-sm-12">
      <h1>
        <i class="fas fa-file-invoice-dollar me-2"></i>
        SEPA Incasso's
      </h1>
      <p class="text-muted">
        Overzicht van alle SEPA incasso collecties
      </p>
    </div>

    <% if @pending_collections.any? %>
      <div class="col-sm-12 mt-3">
        <h3>In behandeling</h3>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Naam</th>
                <th scope="col">Collectiedatum</th>
                <th scope="col">Aantal transacties</th>
                <th scope="col">Aantal gebruikers</th>
                <th scope="col">Totaalbedrag</th>
                <th scope="col">Status</th>
                <th scope="col">Acties</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% @pending_collections.each do |collection| %>
                <tr>
                  <td>
                    <%= link_to collection.name, debit_collection_path(collection) %>
                  </td>
                  <td class="text-nowrap">
                    <%= l(collection.collection_date) %>
                  </td>
                  <td>
                    <%= collection.transaction_count %>
                  </td>
                  <td>
                    <%= collection.user_count %>
                  </td>
                  <td class="text-nowrap">
                    <%= number_to_currency(collection.total_amount, unit: '€') %>
                  </td>
                  <td>
                    <span class="badge bg-warning">In behandeling</span>
                  </td>
                  <td class="text-nowrap">
                    <%= link_to debit_collection_path(collection), class: 'btn btn-sm btn-outline-primary' do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if collection.can_generate? %>
                      <%= link_to generate_debit_collection_path(collection), 
                                  method: :post,
                                  data: { turbo_method: :post, turbo_confirm: 'SEPA bestand genereren?' },
                                  class: 'btn btn-sm btn-success' do %>
                        <i class="fas fa-file-export me-1"></i> Genereer
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>

    <div class="col-sm-12 mt-4">
      <h3>Alle collecties</h3>
      <% if @collections.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Naam</th>
                <th scope="col">Collectiedatum</th>
                <th scope="col">Aantal transacties</th>
                <th scope="col">Aantal gebruikers</th>
                <th scope="col">Totaalbedrag</th>
                <th scope="col">Status</th>
                <th scope="col">Acties</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% @collections.each do |collection| %>
                <tr class="<%= 'table-success' if collection.status == 'completed' %>">
                  <td>
                    <%= link_to collection.name, debit_collection_path(collection) %>
                  </td>
                  <td class="text-nowrap">
                    <%= l(collection.collection_date) %>
                  </td>
                  <td>
                    <%= collection.transaction_count %>
                  </td>
                  <td>
                    <%= collection.user_count %>
                  </td>
                  <td class="text-nowrap">
                    <%= number_to_currency(collection.total_amount, unit: '€') %>
                  </td>
                  <td>
                    <% case collection.status %>
                    <% when 'completed' %>
                      <span class="badge bg-success">Voltooid</span>
                    <% when 'processing' %>
                      <span class="badge bg-info">Bezig</span>
                    <% when 'failed' %>
                      <span class="badge bg-danger">Mislukt</span>
                    <% else %>
                      <span class="badge bg-warning">In behandeling</span>
                    <% end %>
                  </td>
                  <td class="text-nowrap">
                    <%= link_to debit_collection_path(collection), class: 'btn btn-sm btn-outline-primary' do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if collection.sepa_file_content.present? %>
                      <%= link_to download_debit_collection_path(collection), 
                                  class: 'btn btn-sm btn-outline-success' do %>
                        <i class="fas fa-download"></i>
                      <% end %>
                    <% elsif collection.can_generate? %>
                      <%= link_to generate_debit_collection_path(collection), 
                                  method: :post,
                                  data: { turbo_method: :post, turbo_confirm: 'SEPA bestand genereren?' },
                                  class: 'btn btn-sm btn-success' do %>
                        <i class="fas fa-file-export"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= paginate @collections %>
      <% else %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          Er zijn nog geen incasso collecties. Deze worden automatisch aangemaakt voor gebruikers met negatief saldo.
        </div>
      <% end %>
    </div>
  </div>
</div>
