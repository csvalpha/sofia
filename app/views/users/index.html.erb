<% content_for :title, "Gebruikers - #{Rails.application.config.x.site_name}" %>
<% content_for :modal do %>
  <%= render 'modal' %>
  <%= render 'new_identity_user_modal' %>
<% end %>

<div class="container footer-padding">
  <h1 class="my-4">Gebruikers</h1>

  <%= content_tag :div, id: 'users-index', data: {manual_users: @manual_users_json, identity_users: @identity_users_json, amber_users: @amber_users_json, not_activated_users: @not_activated_users_json, deactivated_users: @deactivated_users_json} do %>
    <div class="d-flex justify-content-between align-items-center">
      <h3>Handmatig aangemaakte gebruikers</h3>
      <% if policy(User).create? %>
        <button class="btn btn-sm btn-primary" data-bs-target="#edit_user_modal" data-bs-toggle="modal" role="button">
          <%= fa_icon 'plus' %>
          <span class="d-none d-md-inline ms-1">
            Nieuwe gebruiker
          </span>
        </button>
      <% end %>
    </div>
    <users-table :users="manual_users" class="mb-5"></users-table>

    <% if Rails.application.config.x.site_association == 'C.S.V. Alpha' %>
      <div class="d-flex justify-content-between align-items-center">
        <h3><%= Rails.application.config.x.site_association %> gebruikers</h3>
        <% if policy(User).refresh_user_list? %>
          <span>
            <%= link_to refresh_user_list_users_path, class: 'btn btn-primary btn-sm me-1' do %>
              <%= fa_icon 'refresh' %>
              <span class="d-none d-md-inline ms-1">Synchroniseer gebruikers</span>
            <% end %>
          </span>
        <% end %>
      </div>
      <users-table :users="amber_users" class="mb-5"></users-table>
    <% end %>
    
    <div class="d-flex justify-content-between align-items-center">
      <h3>Streepsysteem gebruikers</h3>
      <button class="btn btn-sm btn-primary" data-bs-target="#new_identity_user_modal" data-bs-toggle="modal" role="button">
        <%= fa_icon 'plus' %>
        <span class="d-none d-md-inline ms-1">
          Nieuwe gebruiker
        </span>
      </button>
    </div>
    <users-table :users="identity_users" class="mb-5"></users-table>

    <% if @not_activated_users.any? %>
      <div class="d-flex justify-content-between align-items-center mt-5">
        <h3>Nog niet geactiveerde gebruikers</h3>
      </div>
      <users-table :users="not_activated_users" class="mb-5"></users-table>
    <%end %>

    <% if @deactivated_users.any? %>
      <div class="d-flex justify-content-between align-items-center mt-5">
        <h3>Gedeactiveerde gebruikers</h3>
      </div>
      <users-table :users="deactivated_users" class="mb-5"></users-table>
    <%end %>
  <% end %>
</div>
