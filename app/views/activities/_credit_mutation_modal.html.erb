<div class="modal fade" id="credit-mutation-modal" aria-labelledby="credit-mutation-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="credit-mutation-modal-label">Inleggen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="credit-mutation-modal-form" :class="{ 'was-validated': this.creditMutationFormInvalid }" class="col-12 mt-2" novalidate="">
          <div class="mb-3 row">
            <div class="col-4">
              <label class="col-form-label" for="creditMutationAmountInput">
                Inleg *
              </label>
            </div>
            <div class="col-8">
              <div class="input-group has-validation">
                <div class="input-group-text">
                  <%= fa_icon 'euro' %>
                </div>
                <input class="form-control" id="creditMutationAmountInput" placeholder="10.00" required=""
                  type="number" step="0.01" v-model="creditMutationAmount" />
                <div class="invalid-feedback">
                  Bedrag is verplicht en moet een getal zijn
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3 row">
            <div class="col-4">
              <label class="col-form-label" for="creditMutationDescriptionInput">
                Beschrijving *
              </label>
            </div>
            <div class="col-8">
              <input class="form-control" id="creditMutationDescriptionInput" placeholder="Inleg contant"
                required="" type="text" v-model="creditMutationDescription" />
              <div class="invalid-feedback">
                Beschrijving is verplicht
              </div>
            </div>
          </div>
          <fieldset disabled="true">
            <div class="mb-3 row">
              <label class="col-4 col-form-label">
                Activiteit *
              </label>
              <div class="col-8">
                <input :value="this.activityTitle" class="form-control" type="text" />
                <small class="form-text text-muted d-block">
                  Omdat deze inleg aangemaakt wordt tijdens een activiteit kan je dit niet aanpassen
                </small>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button aria-label="Close" class="btn btn-secondary me-1" data-bs-dismiss="modal" type="button">
          Annuleren
        </button>
        <button @click="saveCreditMutation" class="btn btn-primary" type="submit" :disabled="isSubmitting">
          Inleg aanmaken
        </button>
      </div>
    </div>
  </div>
</div>